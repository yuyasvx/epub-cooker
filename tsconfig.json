{
    "compilerOptions": {
        "target": "ES2022",
        "lib": ["ESNext"],
        "allowJs": false,
        "skipLibCheck": true,
        "strict": true,
        "module": "Node16",
        "moduleResolution": "Node16",
        "resolveJsonModule": true,
        "isolatedModules": true,
        "incremental": true,
        "experimentalDecorators": true,
        "emitDecoratorMetadata": true,
        "esModuleInterop":true
    },
    "exclude": ["node_modules", "coverage"]
}