{
  "name": "epub-cooker",
  "version": "0.0.1",
  "main": "dist/index.js",
  "bin": "dist/index.js",
  "scripts": {
    "build": "rm -rf ./dist && tsup",
    "build:dev": "rm -rf ./dist && ENV_NAME=local tsup",
    "type-check": "tsc --project ./tsconfig.json --noEmit",
    "lint": "npm run type-check && npx @biomejs/biome format --write ./src && eslint ./src",
    "lint:autofix": "npm run type-check && npx @biomejs/biome format --write ./src && eslint ./src --fix",
    "lint:ci": "npm run type-check && npx @biomejs/biome format --error-on-warnings ./src && eslint ./src",
    "test": "vitest run",
    "test:coverage": "vitest run --coverage.enabled"
  },
  "author": "",
  "license": "ISC",
  "description": "",
  "dependencies": {
    "@inquirer/prompts": "^8.1.0",
    "@xmldom/xmldom": "^0.8.11",
    "archiver": "^7.0.1",
    "chalk": "^5.6.2",
    "columnify": "^1.6.0",
    "date-fns": "^4.1.0",
    "gray-matter": "^4.0.3",
    "gunshi": "^0.27.4",
    "markdown-it": "^14.1.0",
    "markdown-it-front-matter": "^0.2.4",
    "markdown-it-obsidian-images": "^1.0.1",
    "micromatch": "^4.0.8",
    "mime-types": "^3.0.2",
    "mitt": "^3.0.1",
    "neverthrow": "^8.2.0",
    "uuid": "^13.0.0",
    "xml2js": "^0.6.2",
    "yaml": "^2.8.2",
    "zod": "^4.2.1"
  },
  "devDependencies": {
    "@biomejs/biome": "2.3.10",
    "@types/archiver": "^7.0.0",
    "@types/columnify": "^1.5.4",
    "@types/markdown-it": "^14.1.2",
    "@types/micromatch": "^4.0.10",
    "@types/mime-types": "^3.0.1",
    "@types/node": "^22.14.0",
    "@types/xml2js": "^0.4.14",
    "@vitest/coverage-v8": "^4.0.16",
    "@vitest/eslint-plugin": "^1.5.4",
    "esbuild-fix-imports-plugin": "^1.0.23",
    "eslint": "^9.39.2",
    "eslint-config-prettier": "^10.1.8",
    "eslint-plugin-import": "^2.32.0",
    "eslint-plugin-jsdoc": "^61.5.0",
    "eslint-plugin-sort": "^4.0.0",
